<mvc:View controllerName="logaligroup.SAPUI5.controller.InvoicesList" 
          xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Panel id="_IDGenPanel2" accessibleRole="Region">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar">
                <Title id="_IDGenTitle" text="{i18n>invoiceListTitle}"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                <SearchField id="_IDGenSearchField" width="50%" search=".onFilterInvoices"
                             placeholder="{i18n>searchFieldPlaceHolder}"/>
            </Toolbar>
        </headerToolbar>
        <Table id="invoiceList" headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto" 
            items="{ path: 'northwind>/Invoices',
                    sorter: {path: 'ShipperName',
                                group: true}
                    }">
            <columns>
                <Column id="_IDGenColumn" hAlign="End" minScreenWidth="Small" demandPopin="true" width="5em">
                    <Text id="_IDGenText1" text="{i18n>columnQuantity}" />
                </Column>
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText2" text="{i18n>columnName}" />
                </Column>
                <Column id="_IDGenColumn2" minScreenWidth="Small" demandPopin="true">
                    <Text id="_IDGenText3" text="{i18n>columnStatus}" />
                </Column>
                <Column id="_IDGenColumn3" minScreenWidth="Tablet">
                    <Text id="_IDGenText4" text="{i18n>columnSupplier}" />
                </Column>
                <Column id="_IDGenColumn4" hAlign="End">
                    <Text id="_IDGenText5" text="{i18n>columnPrice}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem" type="Navigation"
                                press="navigateToDetails">
                    <cells>
                        <ObjectNumber id="_IDGenObjectNumber" number="{northwind>Quantity}" emphasized="false" />
                        <ObjectIdentifier id="_IDGenObjectIdentifier" title="{northwind>ProductName}" />
                        <Text id="_IDGenText6" text="{
                            path: 'northwind>Status',
                            formatter: '.formatter.invoiceStatus'
                        }" />
                        <Text id="_IDGenText7" text="{northwind>ShipperName}" />
                        <ObjectNumber id="_IDGenObjectNumber1" 
                            number="{parts: [
                                                {path: 'northwind>ExtendedPrice'},
                                                {path: 'currency>/usd'}
                                            ],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    }
                            }"
                            unit="{currency>/usd}"
                            state="{= ${northwind>ExtendedPrice} > 50 ? 'Success' : 'Error'}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>