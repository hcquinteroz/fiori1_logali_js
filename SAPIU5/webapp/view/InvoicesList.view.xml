<mvc:View controllerName="logaligroup.SAPUI5.controller.InvoicesList" 
          xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List id="_IDGenList" headerText="{i18n>invoiceListTitle}" class="sapUiResponsiveMargin" width="auto" items="{invoices>/Invoices}">
        <items>
            <ObjectListItem id="_IDGenObjectListItem" 
                            title="{invoices>Quantity} x {invoices>ProductName}"
                            number="{parts: [
                                                {path: 'invoices>ExtendedPrice'},
                                                {path: 'currency>/usd'}
                                            ],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    }
                            }"
                            numberUnit="{currency>/usd}"
                            numberState="{= ${invoices>ExtendedPrice} > 50 ? 'Success' : 'Error'}">
                <firstStatus>
                    <ObjectStatus id="_IDGenObjectStatus" text="{path: 'invoices>Status',
                                                                 formatter: '.formatter.invoiceStatus'}"/>
                </firstStatus>
            </ObjectListItem>
        </items>
    </List>
</mvc:View>