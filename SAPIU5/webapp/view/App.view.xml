<mvc:View controllerName="logaligroup.SAPUI5.controller.App"
            xmlns="sap.m" 
            xmlns:mvc="sap.ui.core.mvc"
            displayBlock="true">
        <Shell id="_IDGenShell">
            <App id="_IDGenApp">
                    <pages>
                        <Page id="_IDGenPage" title="{i18n>appTitle}">
                            <headerContent>
                                <Button id="helloDialogButtonHeader" icon="sap-icon://action" press=".onOpenDialogHeader" class="sapUiSmallMarginEnd"/>
                            </headerContent>
                            <content>
                                <mvc:XMLView id="_IDGenXMLView" viewName="logaligroup.SAPUI5.view.HelloPanel"/>
                            </content>
                        </Page>
                    </pages>
            </App>
        </Shell>
</mvc:View>
